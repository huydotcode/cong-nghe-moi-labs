<%- include('partials/header') %>

<h1 class="mb-4"><%= product ? 'Edit Product' : 'Create Product' %></h1>

<form action="<%= product ? '/edit/' + product.id : '/create' %>" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Product Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      required
      value="<%= product ? product.name : '' %>"
    />
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Price</label>
    <input
      type="number"
      step="0.01"
      class="form-control"
      id="price"
      name="price"
      required
      value="<%= product ? product.price : '' %>"
    />
  </div>

  <div class="mb-3">
    <label for="url_image" class="form-label">Image URL</label>
    <input
      type="url"
      class="form-control"
      id="url_image"
      name="url_image"
      value="<%= product ? product.url_image : '' %>"
    />
  </div>

  <button type="submit" class="btn btn-success">
    <%= product ? 'Update' : 'Create' %>
  </button>
  <a href="/" class="btn btn-secondary">Cancel</a>
</form>

<%- include('partials/footer') %>
